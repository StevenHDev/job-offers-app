# Supabase Configuration
# Get these values from your Supabase project settings
# https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# File Upload Configuration
# Maximum file size in bytes (5MB = 5242880 bytes)
VITE_MAX_FILE_SIZE=5242880

# Allowed file types for CV upload (MIME types)
VITE_ALLOWED_FILE_TYPES=application/pdf

# Application Configuration
VITE_APP_NAME=Job Portal
VITE_APP_URL=http://localhost:5173

# Pagination
VITE_JOBS_PER_PAGE=10
VITE_APPLICATIONS_PER_PAGE=20

# Email Configuration (Optional - for custom email templates)
# VITE_CONTACT_EMAIL=contact@yourcompany.com

# Feature Flags (Optional)
# VITE_ENABLE_SOCIAL_LOGIN=false
# VITE_ENABLE_NOTIFICATIONS=true
# VITE_ENABLE_ANALYTICS=false

# Environment
VITE_ENVIRONMENT=development